<%- include("partials/header.ejs") %>


<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Kitties Forum</h1>
            <p><strong>Find adorable kittie images here</strong></p>
            <p>
                <a class="btn btn-primary " href="/campgrounds/new">Share Your CATS!!</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <% campgrounds.forEach(function (campground) { %>
                <div class="col-md-2 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name%></h4>
                        </div>
                    </div>
                </div>
            <% });%>
        </div>
    </div>


</div>


<%- include("partials/footer.ejs") %>